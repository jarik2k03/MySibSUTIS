#!/usr/bin/gnuplot
set termoption enhanced
set terminal svg size 800,600 font "Arial, 16"
set output "plot.svg"
set style line 1 lc rgb "blue" lt "dotted" lw 2 pt 9 ps 1
set style line 2 lc rgb "red" lt 1 lw 2 pt 1 ps 1
set style line 3 lc rgb "green" lt 1 lw 2 pt 3 ps 1
set style line 4 lc rgb "yellow" lt 1 lw 2 pt 5 ps 1
set style line 5 lc rgb "magenta" lt 1 lw 2 pt 2 ps 1
set style line 5 lc rgb "gray" lt 1 lw 2 pt 2 ps 1

set border lw 2
set grid
set xlabel "Threads"
set ylabel "Speedup"
set title "N-body N=100"
set key top left

plot "data.txt" using 1:2  title "Linear Speedup" with linespoints ls 1,\
"data.txt" using 1:3  title "Version 1" with linespoints ls 2,\
"data.txt" using 1:4  title "Version 2" with linespoints ls 3,\
"data.txt" using 1:5  title "Version 3" with linespoints ls 4, \
"data.txt" using 1:6  title "Version 4" with linespoints ls 5, \
"data.txt" using 1:7  title "Version 5" with linespoints ls 6
